{
    "extends": "./tsconfig.json",

    "compilerOptions": {
        "outDir": "out",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,

        // @types/node is used in test files, but the library code must not
        // depend on any platform-specific types
        //
        // Note that this disables all @types/* types during build. Add
        // any as needed
        "types": [],
    },

    "exclude": ["./src/**/*.test.ts", "./src/_examples/**/*.ts"]
}
